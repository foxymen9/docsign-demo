<%- include('partials/header') %>
<div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading"><img src="/imgs/logo.png" class="logo"/> Log in</div>
            <div class="panel-body">
                <% if(locals.error) { %>
                    <div class="alert bg-danger" role="alert"><svg class="glyph stroked cancel"><use xlink:href="#stroked-cancel"></use></svg> <%= error %></div>
                <% } %>
                <% if(locals.success) { %>
                    <div class="alert bg-success" role="alert"><svg class="glyph stroked checkmark"><use xlink:href="#stroked-checkmark"></use></svg> <%= success %></div>
                <% } %>
                <form method="post" role="form">
                    <fieldset>
                        <div class="form-group">
                            <input type="text" id="username" value="<%= locals.username || '' %>" class="form-control" placeholder="Username" name="username" autofocus="">
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Password" name="password" id="password" type="password" value="">
                        </div>
                        <div class="checkbox">
                            <label>
                                <input name="remember" type="checkbox" value="Remember Me">Remember Me
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary">Login</button>
                        <a href="/register" class="btn btn-link">Register</a>
                    </fieldset>
                </form>
            </div>
        </div>
    </div><!-- /.col-->
</div><!-- /.row -->
<%- include('partials/footer') %>