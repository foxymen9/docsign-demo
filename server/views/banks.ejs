<%- include('partials/header') %>
<div class="row">
    <div class="col-xs-4 col-xs-offset-1">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">Banks</div>
            <div class="panel-body">
                <table class="table table-responsive" data-toggle="table" id="table-style">
                    <thead>
                        <tr>
                            <th >Name</th>
                            <th >Logo</th>
                            <th >Color</th>
                            <th ></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% locals.banks && locals.banks.forEach(function(bank) { %>
                            <tr>
                                <td><%= bank.name %></td>
                                <td><img src="<%= bank.logo %>" style="max-width: 90%" /></td>
                                <td><span style="color:<%= bank.color %>"><%= bank.color %></span></td>
                                <td width="5%">
                                    <a href="/banks/delete/<%= bank._id %>"><svg class="glyph stroked cancel" style="width:24px;height:24px"><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#stroked-cancel"></use></svg></a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            
        </div>
    </div>
    <div class="col-xs-6">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">Create a Bank</div>
            <div class="panel-body">
                <% if(locals.error) { %>
                    <div class="alert bg-danger" role="alert"><svg class="glyph stroked cancel"><use xlink:href="#stroked-cancel"></use></svg> <%= error %></div>
                <% } %>
                <% if(locals.success) { %>
                    <div class="alert bg-success" role="alert"><svg class="glyph stroked checkmark"><use xlink:href="#stroked-checkmark"></use></svg> <%= success %></div>
                <% } %>
                <form method="post" action="/banks" enctype="multipart/form-data" class="form-horizontal">
                    <div class="form-group">
                        <label for="bankName" class="col-sm-4 control-label">Bank Name</label>
                        <div class="col-sm-8">
                            <input type="text" name="bankName" id="bankName" class="form-control" value="<%= locals.bankName || '' %>" required />
                        </div>    
                    </div>
                    <div class="form-group">
                        <label for="uploadFile" class="col-sm-4 control-label">Logo (*.png, *.jpg, *.jpeg)</label>
                        <div class="col-sm-8">
                            <input type="file" name="uploadFile" id="uploadFile" />
                        </div>    
                    </div>
                    <div class="form-group">
                        <label for="color" class="col-sm-4 control-label">Color</label>
                        <div class="col-sm-8">
                            <input type="text" name="color" id="color" class="form-control" value="<%= locals.color || '' %>" required />
                        </div>    
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-8">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a href="/" class="btn btn-link">Back to home</a>
                        </div>    
                    </div>
                </form>
            </div>
            
        </div>
    </div>
    
</div>
<%- include('partials/footer') %>