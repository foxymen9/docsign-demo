<%- include('partials/header') %>
<div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">Upload Document</div>
            <div class="panel-body">
                <% if(locals.error) { %>
                    <div class="alert bg-danger" role="alert"><svg class="glyph stroked cancel"><use xlink:href="#stroked-cancel"></use></svg> <%= error %></div>
                <% } %>
                <% if(locals.success) { %>
                    <div class="alert bg-success" role="alert"><svg class="glyph stroked checkmark"><use xlink:href="#stroked-checkmark"></use></svg> <%= success %></div>
                <% } %>
                <form method="post" action="/upload" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="firstName">Document File(*.docx)</label>
                        <input type="file" name="uploadFile" id="uploadFile" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Upload</button>
                        <a href="/login" class="btn btn-link">Cancel to login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer') %>