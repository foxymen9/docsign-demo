<%- include('partials/header') %>
<div class="row">
    <div class="col-xs-4 col-xs-offset-1">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">Documents</div>
            <div class="panel-body">
                <table class="table table-responsive" data-toggle="table" id="table-style">
                    <thead>
                        <tr>
                            <th >Name</th>
                            <th >File</th>
                            <th ></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% locals.documents && locals.documents.forEach(function(document) { %>
                            <tr>
                                <td><%= document.name %></td>
                                <td><a href="<%= document.url %>" target="_blank"><%= document.url %></a></td>
                                <td width="5%">
                                    <a href="/upload/delete/<%= document._id %>"><svg class="glyph stroked cancel" style="width:24px;height:24px"><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#stroked-cancel"></use></svg></a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            
        </div>
    </div>
    <div class="col-xs-6">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">Upload Document</div>
            <div class="panel-body">
                <% if(locals.error) { %>
                    <div class="alert bg-danger" role="alert"><svg class="glyph stroked cancel"><use xlink:href="#stroked-cancel"></use></svg> <%= error %></div>
                <% } %>
                <% if(locals.success) { %>
                    <div class="alert bg-success" role="alert"><svg class="glyph stroked checkmark"><use xlink:href="#stroked-checkmark"></use></svg> <%= success %></div>
                <% } %>
                <form method="post" action="/upload" enctype="multipart/form-data" class="form-horizontal">
                    <div class="form-group">
                        <label for="documentName" class="col-sm-4 control-label">Document Name</label>
                        <div class="col-sm-8">
                            <input type="text" name="documentName" id="documentName" class="form-control" value="<%= locals.documentName || '' %>" required />
                        </div>    
                    </div>
                    <div class="form-group">
                        <label for="uploadFile" class="col-sm-4 control-label">File (*.docx, *.pdf, *.png, *.jpg, *.jpeg)</label>
                        <div class="col-sm-8">
                            <input type="file" name="uploadFile" id="uploadFile" />
                        </div>    
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-8">
                            <button type="submit" class="btn btn-primary">Upload</button>
                            <a href="/" class="btn btn-link">Back to home</a>
                        </div>    
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer') %>